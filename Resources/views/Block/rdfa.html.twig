
{% set name = view.seo.metaTitle is defined and view.seo.metaTitle is not null ? view.seo.metaTitle : view.name %}
{% set description = view.seo.metaDescription is defined and view.seo.metaDescription ? view.seo.metaDescription : name %}
<div vocab="http://schema.org/" typeof="CreativeWork">
    <div property="name">{{ name }}</div>
    <div property="description">{{ description }}</div>
    <div property="aggregateRating" typeof="AggregateRating">
        <div>Book rating:
            <span property="ratingValue">{{ ratingRound }}</span>
            <span property="bestRating">5</span>
            <span property="ratingCount">{{ ratingNumber }}</span>
        </div>
    </div>
</div>
<div vocab="http://schema.org/" typeof="AggregateRating">
    <span property="ratingValue">{{ ratingRound }}</span>
    <span property="bestRating">5</span>
    <span property="worstRating">0.5</span>
    <span property="ratingCount">{{ ratingNumber }}</span>
    <div property="itemReviewed" typeof="CreativeWork">
        <div>Item reviewed:
            <div property="name">{{ name }}</div>
            <div property="description">{{ description }}</div>
        </div>
    </div>
</div>