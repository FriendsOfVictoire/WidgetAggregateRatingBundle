{% if ratings is defined and ratings is iterable %}
  {% set name = view.seo.metaTitle is defined and view.seo.metaTitle is not null ? view.seo.metaTitle : view.name %}
  {% set description = view.seo.metaDescription is defined and view.seo.metaDescription ? view.seo.metaDescription : name %}
  <div itemscope itemtype="http://schema.org/Thing" class="hidden">
    <div itemprop="name">{{ name }} </div>
    <div itemprop="description">{{ description }}</div>
    <div itemprop="aggregateRating" itemscope itemtype="http://schema.org/AggregateRating">
      <div>
        <span itemprop="ratingValue">{{ ratingRound }}</span>
        <span itemprop="bestRating">5</span>
        <span itemprop="ratingCount">{{ ratings|length }}</span>
      </div>
    </div>
  </div>
{% endif %}